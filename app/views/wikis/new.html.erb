<h1>New Wiki</h1>

<div class="row">

  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <% if current_user.standard? %>
        <div class="form-group">
          <%= f.label :private %>
          <%= f.check_box :private, class: 'form-control', checked: false, disabled: true %>
          As a standard user, you can only create public wikis.
          Upgrade to premium account to create your own private wikis!
        </div>
      <% else %>
        <div class="form-group">
          <%= f.label :private %>
          <%= f.check_box :private, class: 'form-control' %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
