<h1>All Wikis</h1>
<div class="row">
  <div class="col-md-8">

    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            blabla<%= link_to wiki.title, wiki %>
          </h4>
          <p>
            here
          </p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if user_signed_in? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
