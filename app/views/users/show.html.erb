<div class="row">
  <div class="col-md-8">
    <h1>Account Info</h1>
    <hr />
    <ul>
      <li>
        Email: <%= @user.email %>
      </li>
      <li>
        Account Type: <%= @user.role %>
      </li>
    </ul>
    <hr />
    <% if current_user.role == "standard"%>
      <%= link_to "Upgrade Account", new_charge_path, class: 'btn btn-success' %>
    <% elsif current_user.role == "premium"%>
      <%= link_to "Downgrade Account", new_downgrade_path, class: 'btn btn-danger' %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>
